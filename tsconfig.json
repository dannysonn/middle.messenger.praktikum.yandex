{
  "compilerOptions": {
    "outDir": "dist",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "es2019",
      "dom",
      "dom.iterable",
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": "src/"
  },
  "exclude": [
    "node_modules"
  ]
}
